	# Class
	# Only protocol class 0 (basic connectionless) 
	# and protocol class 2 (basic connection-oriented)
	# are used
	set class 02; 

	new SCCP_N_CONNECT_RES s

	# Spc
	wr s Spc $spc
	# StkId
	wr s StkId $stkid

	# Cid
	wr s Cid $cid
	# Class
	wr s Class $class 

	# Pdu
	if { ![IsVoid $bssapSig] } {
		if { [LbInterfaceActive] } {
			wr s Data [bssapleSigToPdu bssapSig]
		} else {
			wr s Data [bssapSigToPdu bssapSig]
		}
	}

	send s
	LogOutputPrim $s
}

